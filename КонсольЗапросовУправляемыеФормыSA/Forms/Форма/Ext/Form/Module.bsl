	НовыйПорядковыйНомер = ЭлементыНовогоУзла.Индекс(Родитель) + 1;  // Вставим под крайним элементом
	НовыйЭлемент = ЭлементыНовогоУзла.Вставить(НовыйПорядковыйНомер);
	
